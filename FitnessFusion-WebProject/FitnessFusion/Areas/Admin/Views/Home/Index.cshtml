@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> meals in menu, subscriptions and exercises.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and trainers</b> and <b>all subscribers</b> in the
        system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Meal" asp-action="All"
       class="btn btn-primary btn-lg">All Meals</a>
    <a asp-area="" asp-controller="Meal" asp-action="Add"
       class="btn btn-primary btn-lg">Add Meal</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="Exercise" asp-action="All"
       class="btn btn-primary btn-lg">All exercises</a>
    <a asp-area="" asp-controller="Exercise" asp-action="Add"
       class="btn btn-primary btn-lg">Add Exercise</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
    <a asp-area="Admin" asp-controller="User" asp-action="AllSubscribers"
       class="btn btn-primary btn-lg">All Subscribers</a>
</div>