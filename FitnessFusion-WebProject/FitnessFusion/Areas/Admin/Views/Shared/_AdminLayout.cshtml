@using static FitnessFusion.Common.GeneralApplicationConstants;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness Fusion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessFusion.Web.styles.css" asp-append-version="true" />
    <link rel="icon" href="/img.icons8.ico" type="image/x-icon">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.css" integrity="sha512-oe8OpYjBaDWPt2VmSFR+qYOdnTjeV9QPLJUeqZyprDEQvQLJ9C5PCFclxwNuvb/GQgQngdCXzKSFltuHD3eCxA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <partial name="_NotificationsPartial">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fitness Fusion</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item dropdown">
                                <div>
                                    <a class="btn dropdown-toggle" href="#" role="button" id="dropdowmMenuLink"
                                       data-bs-toggle="dropdown" aria-expanded="true">
                                        All
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdowmMenuLink">
                                        <li>
                                            <a class="dropdown-item nav-link text-dark" asp-area=""
                                               asp-action="All" asp-controller="Meal">All Meals</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item nav-link text-dark" asp-area=""
                                               asp-action="All" asp-controller="Exercise">All Exercises</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item nav-link text-dark" asp-area=""
                                               asp-action="All" asp-controller="Subscription">All Subscription</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item nav-link text-dark" asp-area="Admin"
                                               asp-action="All" asp-controller="User">All Users</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Trainer" 
                                asp-action="Add">Create Trainer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Subscription"
                                   asp-action="Add">Create Subscription</a>
                            </li>
                        </ul>
                    </div>

                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; Fitness Fusion @ReleaseYear
                @if (ReleaseYear != DateTime.UtcNow.Year)
                {
                    @Html.Raw($" - {DateTime.UtcNow.Year}")
                    ;
                }
            </div>
        </footer>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
