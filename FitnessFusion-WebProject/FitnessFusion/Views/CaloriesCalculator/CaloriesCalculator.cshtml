@using FitnessFusion.Data.Models.Enums;
@model FitnessFusion.Data.Models.CaloriesCalculator

<form method="post">
    <div class="form-group">
        <label asp-for="Weight">Weight (kg):</label>
        <input asp-for="Weight" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Height">Height (cm):</label>
        <input asp-for="Height" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age">Age:</label>
        <input asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ActivityLevel">Activity Level:</label>
        <select asp-for="ActivityLevel" asp-items="Html.GetEnumSelectList<ActivityLevelType>()" class="form-control">
            <option value="">-- Select Activity Level --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Gender">Gender:</label>
        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<GenderType>()" class="form-control">
            <option value="">-- Select Gender --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>