@model SubscriptionModel

@{
    ViewData["Title"] = "Subscription Details";
}

<div class="container">
    <h1 class="text-center mt-5">@ViewData["Title"]</h1>
    <hr />
    <div class="card mt-4">
        <div class="card-header">
            @Model.TypeOfSubscription Subscription
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="card-title">@Model.Name</h5>
                    <img src="/img/@Model.Image" alt="Subscription Image" class="img-fluid mb-4" />
                    <p>Price: @Model.Price</p>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8"><a>@Model.Description</a></dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Subscription" asp-action="Subscribe" class="btn btn-primary">Subscribe</a>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Subscription" asp-action="All" class="btn btn-primary">Back to All Subscriptions</a>
        </div>
    </div>
</div>