@model SubscribeViewModel
@using static FitnessFusion.Common.EntityValidationConstants.Subscription;
@{
    TempData["Title"] = "Please enter your card information";
}

<h1 class="text-center">@TempData["Title"]</h1>
<hr />

<form asp-controller="Subscription" asp-action="Subscribe" method="post">
    <div class="form-group mb-2">
        <label asp-for="CardNumber" class="form-label-add-edit">Card Number:</label>
        <input asp-for="CardNumber" class="form-control" minlength="@CardNumberLength" maxlength="@CardNumberLength" required placeholder="XXXX-XXXX-XXXX-XXXX"/>
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="ExpirationDate" class="form-label-add-edit">Expiration Date:</label>
        <input asp-for="ExpirationDate" class="form-control" required placeholder="MM/YY" />
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Cvv" class="form-label-add-edit">Cvv:</label>
        <input asp-for="Cvv" class="form-control" required placeholder="XXX"/>
        <span asp-validation-for="Cvv" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Subscribe</button>
</form>