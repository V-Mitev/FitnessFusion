@model AddMealModel
@using static FitnessFusion.Common.EntityValidationConstants.Meal
@{
    ViewData["Title"] = "Add Meal";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<form asp-controller="Meal" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="@Model.Name" class="form-label-add-edit">Name</label>
        <input asp-for="@Model.Name" class="form-control" minlength="@NameMinLength" maxlength="@NameMaxLength" required />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl">Image:</label>
        <input type="file" class="form-control" asp-for="ImageUrl" accept="image/*" required>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Calories">Calories:</label>
        <input type="number" value="0" id="Calories" name="Calories" class="form-control" min="@CaloriesMinValue" max="@CaloriesMaxValue" step="any" />
        <span asp-validation-for="@Model.Calories" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="mealType">Meal Type:</label>
        <select class="form-control" id="mealType" name="mealType" required>
            <option value="">Select a meal type</option>
            @foreach (var meal in Enum.GetValues(typeof(MealType)))
            {
                <option value="@meal.ToString()">@meal</option>
            }
        </select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add</button>
</form>
