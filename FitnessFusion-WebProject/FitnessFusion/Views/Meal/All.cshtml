@model IEnumerable<AllMealsViewModel>

<style>
    .card-img-top {
        max-width: 200px;
    }
</style>

<div class="container">
    <h1>Menu</h1>

    <h2>Breakfast</h2>

    <div class="card-deck">
        <div class="row">
            @foreach (var meal in Model.Where(m => m.MealType == "Breakfast"))
            {
                <div class="card col-md-4">
                    <img src="@($"/img/{@meal.Image}")" class="card-img-top" alt="Meal Image">
                    <div class="card-body">
                        <h5 class="card-title">@meal.Name</h5>
                        <p class="card-text">Calories per 100 grams: @meal.Calories</p>
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Meal" asp-action="Edit" asp-route-id="@meal.Id" class="btn btn-warning">Edit</a>
                            <form class="delete-form" asp-controller="Meal" asp-action="Delete" asp-route-id="@meal.Id">
                                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete meal: @meal.Name')" />
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

