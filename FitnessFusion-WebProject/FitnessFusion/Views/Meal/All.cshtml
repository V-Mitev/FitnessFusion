@model IEnumerable<AllMealsViewModel>

<h1>Menu</h1>

<div class="meal-type">
    <h2 class="meal-type-title">Breakfast</h2>
    <div class="meal-list">
        @foreach (var meal in Model.Where(m => m.MealType == "Breakfast"))
        {
            <div class="meal-item">
                <div class="meal-name">@meal.Name</div>
                <div class="meal-details">
                    <span class="meal-calories">@meal.Calories</span> calories на 100гр.
                </div>
                <div class="meal-actions">
                    <button class="btn btn-primary">Edit</button>
                    <button class="btn btn-danger" onclick="confirmDelete('@meal.Name')">Delete</button>
                </div>
            </div>
        }
    </div>
</div>

