@model ICollection<AllTrainingPlansViewModel>

<h2>Списък с тренировъчни планове</h2>
<table>
    <tr>
        <th>Име</th>
        <th>Треньор</th>
        <th>Снимка</th>
        <th>Детайли</th>
        <th>Редактирай</th>
        <th>Изтрий</th>
    </tr>
    @foreach (var trainingPlan in Model)
    {
        <tr>
            <td>@trainingPlan.Name</td>
            <td>@trainingPlan.Trainer</td>
            <td><img src="@($"/img/{trainingPlan.Image}")" alt="Снимка"></td>
            <td><a asp-action="Details" asp-route-id="@trainingPlan.Id">Повече детайли</a></td>
            <td><a asp-action="EditTrainingPlan" asp-route-id="@trainingPlan.Id">Редактирай</a></td>
            <td>
                <form class="delete-form" asp-controller="TrainingPlan" asp-action="DeleteTrainingPlan" asp-route-id="@trainingPlan.Id">
                    <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this training plan: @trainingPlan.Name')" />
                </form>
            </td>
        </tr>
    }
</table>

<a asp-controller="TrainingPlan" asp-action="CreateTrainingPlan" class="btn btn-primary">Create new training plan</a>
