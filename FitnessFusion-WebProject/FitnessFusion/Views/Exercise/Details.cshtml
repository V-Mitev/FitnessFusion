@model AllExercisesModel
@{
    ViewData["Title"] = "Exercise Details";
}

<div class="container">
    <div class="card mt-4">
        <div class="card-header text-center border fw-bolder">
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="card-title">@Model.Name</h5>
                    <img src="/img/@Model.ImagePath" alt="Exercise Image" class="img-fluid mb-4" />
                    <p class="card-text">@Model.Description</p>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Video Link:</dt>
                        <dd class="col-sm-8"><a href="@Model.VideoLink" target="_blank">@Model.VideoLink</a></dd>

                        <dt class="col-sm-4">Muscle Group:</dt>
                        <dd class="col-sm-8">@Model.MuscleGroup</dd>

                        <dt class="col-sm-4">Difficulty:</dt>
                        <dd class="col-sm-8">@Model.Difficulty</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Exercise" asp-action="All" class="btn btn-primary">Back to All Exercises</a>
        </div>
    </div>
</div>